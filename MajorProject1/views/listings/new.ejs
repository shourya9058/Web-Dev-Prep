<% layout("/layouts/boilerplate") %>
<div class="airbnb-container">
  <div class="listing-form-container">
    <h2 class="form-heading">List your space</h2>
    <p class="form-subheading">
      Share your place with travelers around the world
    </p>

    <form
      method="post"
      action="/listings"
      class="airbnb-form needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="form-group">
        <label for="title">What's the name of your place?</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="E.g., Cozy mountain retreat with stunning views"
          class="form-control"
          required
        />
        <div class="feedback-text">Keep it short and catchy</div>
      </div>

      <!-- Description -->
      <div class="form-group">
        <label for="description">Describe your place to guests</label>
        <textarea
          name="listing[description]"
          class="form-control"
          placeholder="Mention the best features, unique amenities, and nearby attractions"
          rows="4"
          required
        ></textarea>
      </div>

      <!-- Image -->
      <div class="form-group">
        <label for="image">Add photos of your place</label>
        <div class="image-upload-container">
          <input type="file" name="listing[image]" class="form-control" />

          <div class="image-tips">
            Great photos increase your chances of getting bookings
          </div>
        </div>
        required
      </div>

      <!-- Price and Country -->
      <div class="form-row">
        <div class="form-group price-group">
          <label for="price">Price per night (₹)</label>
          <div class="price-input-container">
            <span class="currency-symbol">₹</span>
            <input
              name="listing[price]"
              placeholder="1200"
              class="form-control"
              required
            />
          </div>
        </div>

        <div class="form-group country-group">
          <label for="country">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            required
          />
        </div>
      </div>

      <!-- Location -->
      <div class="form-group">
        <label for="location">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="City, State"
          class="form-control"
          required
        />
        <div class="location-tip">
          Provide specific location to help guests find your place
        </div>
      </div>

      <!-- Room Details -->
      <div class="form-row">
        <div class="form-group">
          <label for="roomType">Room Type</label>
          <select name="listing[roomType]" class="form-control">
            <option value="single">Single</option>
            <option value="shared">Shared</option>
            <option value="studio">Studio</option>
            <option value="ensuite">Ensuite</option>
          </select>
        </div>

        <div class="form-group">
          <label for="furnished">Furnishing</label>
          <select name="listing[furnished]" class="form-control">
            <option value="furnished">Furnished</option>
            <option value="unfurnished">Unfurnished</option>
            <option value="semifurnished">Semi-Furnished</option>
          </select>
        </div>
      </div>

      <!-- Preferences -->
      <div class="form-row">
        <div class="form-group">
          <label for="genderPreference">Gender Preference</label>
          <select name="listing[genderPreference]" class="form-control">
            <option value="any">Any</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>

        <div class="form-group">
          <label for="preferredTenants">Preferred Tenants</label>
          <select name="listing[preferredTenants]" class="form-control">
            <option value="any">Any</option>
            <option value="students">Students</option>
            <option value="professionals">Professionals</option>
            <option value="family">Family</option>
            <option value="couples">Couples</option>
          </select>
        </div>
      </div>

      <!-- Availability -->
      <div class="form-group">
        <label>
          <input
            type="checkbox"
            name="listing[immediateAvailability]"
            checked
          />
          Immediate Availability
        </label>
      </div>

      <div class="form-group">
        <label for="availableFrom">Available From</label>
        <input type="date" name="listing[availableFrom]" class="form-control" />
      </div>

      <!-- Amenities -->
      <div class="form-group">
        <label>Amenities</label><br />
        <label
          ><input type="checkbox" name="listing[amenities][attachedBathroom]" />
          Attached Bathroom</label
        ><br />
        <label
          ><input
            type="checkbox"
            name="listing[amenities][kitchenAccess]"
            checked
          />
          Kitchen Access</label
        ><br />
        <label
          ><input type="checkbox" name="listing[amenities][wifi]" /> WiFi</label
        ><br />
        <label><input type="checkbox" name="listing[amenities][ac]" /> AC</label
        ><br />
        <label
          ><input type="checkbox" name="listing[amenities][laundry]" />
          Laundry</label
        ><br />
        <label
          ><input type="checkbox" name="listing[amenities][parking]" />
          Parking</label
        >
      </div>

      <!-- Rules -->
      <div class="form-group">
        <label>Rules</label><br />
        <label
          ><input type="checkbox" name="listing[rules][smoking]" /> Smoking
          Allowed</label
        ><br />
        <label
          ><input type="checkbox" name="listing[rules][pets]" /> Pets
          Allowed</label
        ><br />
        <label
          ><input type="checkbox" name="listing[rules][guests]" checked />
          Guests Allowed</label
        ><br />
        <label
          ><input type="checkbox" name="listing[rules][curfew]" /> Curfew</label
        >
      </div>

      <div class="form-group">
        <label for="rules[curfewDetails]">Curfew Details</label>
        <input
          type="text"
          name="listing[rules][curfewDetails]"
          class="form-control"
          placeholder="E.g., No entry after 11 PM"
        />
      </div>

      <!-- Security Deposit and Min Stay -->
      <div class="form-row">
        <div class="form-group">
          <label for="securityDeposit">Security Deposit (₹)</label>
          <input
            type="number"
            name="listing[securityDeposit]"
            class="form-control"
            placeholder="E.g., 3000"
          />
        </div>

        <div class="form-group">
          <label for="minStayMonths">Minimum Stay (in months)</label>
          <input
            type="number"
            name="listing[minStayMonths]"
            class="form-control"
            placeholder="E.g., 3"
          />
        </div>
      </div>

      <!-- Bills -->
      <div class="form-group">
        <label
          ><input type="checkbox" name="listing[bills][included]" /> Bills
          Included</label
        >
      </div>

      <div class="form-group">
        <label for="bills[details]">Bill Details</label>
        <input
          type="text"
          name="listing[bills][details]"
          class="form-control"
          placeholder="E.g., Water & Electricity included"
        />
      </div>

      <button type="submit" class="airbnb-submit-btn">Create listing</button>
    </form>
  </div>
</div>
